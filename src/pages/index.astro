---
import Layout from "../layouts/Layout.astro";
import Topbar from "../components/Topbar.astro";

const user = Astro.locals.user;

// If user is logged in, redirect to /generate
if (user) {
  return Astro.redirect("/generate");
}
---

<Layout title="10x Cards - Smart Flashcards">
  <Topbar user={user} />

  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <!-- Hero Section -->
      <div class="mb-12 text-center">
        <h1 class="mb-4 text-4xl md:text-5xl font-bold">10x Cards</h1>
        <p class="text-lg md:text-xl text-muted-foreground">Generate smart flashcards from any text using AI</p>
      </div>

      <!-- Auth CTA Card -->
      <div class="mb-12 rounded-lg border bg-card p-8 text-center shadow-sm">
        <h2 class="mb-4 text-2xl font-semibold">Start using 10x Cards</h2>
        <p class="mb-6 text-muted-foreground">Log in or create an account to generate your own flashcards</p>
        <div class="flex gap-4 justify-center flex-wrap">
          <a
            href="/register"
            class="inline-flex items-center justify-center rounded-md text-base font-medium bg-primary text-primary-foreground h-11 px-8 hover:bg-primary/90 transition-colors"
          >
            Create Account
          </a>
          <a
            href="/login"
            class="inline-flex items-center justify-center rounded-md text-base font-medium border border-input bg-background h-11 px-8 hover:bg-accent hover:text-accent-foreground transition-colors"
          >
            Log In
          </a>
        </div>
      </div>

      <!-- Features -->
      <div class="mb-12">
        <h2 class="mb-6 text-2xl font-semibold text-center">How does it work?</h2>
        <div class="grid md:grid-cols-3 gap-6">
          <div class="rounded-lg border bg-card p-6 shadow-sm">
            <div class="mb-4 text-3xl">ğŸ“</div>
            <h3 class="mb-2 text-lg font-semibold">1. Paste text</h3>
            <p class="text-sm text-muted-foreground">
              Paste any text (1000-10000 characters) from your study materials
            </p>
          </div>

          <div class="rounded-lg border bg-card p-6 shadow-sm">
            <div class="mb-4 text-3xl">ğŸ¤–</div>
            <h3 class="mb-2 text-lg font-semibold">2. AI generates flashcards</h3>
            <p class="text-sm text-muted-foreground">
              Artificial intelligence automatically creates 10 flashcard proposals
            </p>
          </div>

          <div class="rounded-lg border bg-card p-6 shadow-sm">
            <div class="mb-4 text-3xl">âœ…</div>
            <h3 class="mb-2 text-lg font-semibold">3. Select and save</h3>
            <p class="text-sm text-muted-foreground">
              Edit, accept selected flashcards and save them to your collection
            </p>
          </div>
        </div>
      </div>

      <!-- Features List -->
      <div class="rounded-lg border bg-card p-8 shadow-sm">
        <h2 class="mb-6 text-2xl font-semibold text-center">Features</h2>
        <div class="space-y-4">
          <div class="flex items-start gap-3">
            <div class="mt-1 text-xl">âœï¸</div>
            <div>
              <h3 class="font-semibold">Full editing</h3>
              <p class="text-sm text-muted-foreground">
                Edit each flashcard before saving - customize the content to your needs
              </p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <div class="mt-1 text-xl">âœ…</div>
            <div>
              <h3 class="font-semibold">Selective saving</h3>
              <p class="text-sm text-muted-foreground">
                Accept only the flashcards you like - save all or selected ones
              </p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <div class="mt-1 text-xl">ğŸ—‘ï¸</div>
            <div>
              <h3 class="font-semibold">Easy removal</h3>
              <p class="text-sm text-muted-foreground">Remove flashcards that don't meet your expectations</p>
            </div>
          </div>

          <div class="flex items-start gap-3">
            <div class="mt-1 text-xl">ğŸ’¾</div>
            <div>
              <h3 class="font-semibold">Your knowledge base</h3>
              <p class="text-sm text-muted-foreground">
                All flashcards are saved to your account - secure and always accessible
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Bottom CTA -->
      <div class="mt-12 text-center">
        <p class="mb-4 text-muted-foreground">Ready to get started?</p>
        <a
          href="/register"
          class="inline-flex items-center justify-center rounded-md text-base font-medium bg-primary text-primary-foreground h-11 px-8 hover:bg-primary/90 transition-colors"
        >
          Create Free Account
        </a>
      </div>
    </div>
  </main>
</Layout>
